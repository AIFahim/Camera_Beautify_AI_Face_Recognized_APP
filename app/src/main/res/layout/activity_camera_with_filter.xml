<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.camerabeautify.Activity.CameraWithFilterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.camerabeautify.camfilter.widget.LuoGLCameraView
            android:id="@+id/glsurfaceview_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/header_layout"
            style="@style/header_layout_size"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@color/transparent_white"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                style="@style/llt_menu_item">
                <ImageView
                    android:id="@+id/btn_more"
                    style="@style/header_layout_icon_size"
                    android:src="@drawable/icon_more" />
            </LinearLayout>

            <LinearLayout
                style="@style/llt_menu_item">

                <ImageView
                    android:id="@+id/img_main_flash"
                    style="@style/header_layout_icon_size"
                    android:src="@drawable/icon_flash"/>
            </LinearLayout>



            <LinearLayout
                style="@style/llt_menu_item">

                <ImageView
                    android:id="@+id/btn_touch"
                    style="@style/header_layout_icon_size"
                    android:src="@drawable/icon_touch_enble" />

            </LinearLayout>


            <LinearLayout
                style="@style/llt_menu_item">

                <ImageView
                    android:id="@+id/btn_camera_switch"
                    style="@style/header_layout_icon_size"
                    android:src="@drawable/icon_switch_camera" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            style="@style/trangle_layout_size"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/trangle_1"
                style="@style/trangle">

                <ImageView

                    style="@style/trangle_layout_icon_size"
                    android:src="@drawable/trangle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/trangle_2"
                style="@style/trangle">

                <ImageView

                    style="@style/trangle_layout_icon_size"
                    android:src="@drawable/trangle"/>
            </LinearLayout>



            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/trangle_3"
                style="@style/trangle">

                <ImageView

                    style="@style/trangle_layout_icon_size"
                    android:src="@drawable/trangle" />

            </LinearLayout>


            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/trangle_4"
                style="@style/trangle">

                <ImageView

                    style="@style/trangle_layout_icon_size"
                    android:src="@drawable/trangle" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llt_main_flash_col"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_layout"
            android:background="@drawable/rectanguler_shape"
            android:orientation="horizontal"
            android:padding="6.5dp">

            <LinearLayout
                android:id="@+id/llt_main_flash_on"
                style="@style/llt_menu_item">

                <ImageView
                    android:id="@+id/img_main_flash_on"
                    style="@style/img_main_item"
                    android:src="@drawable/ico_flash_on" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_main_flash_off"
                style="@style/llt_menu_item">

                <ImageView
                    android:id="@+id/img_main_flash_off"
                    style="@style/img_main_item"
                    android:src="@drawable/ico_flash_off" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            style="@style/header_layout_size"
            android:gravity="center_horizontal"
            android:background="@color/transparent_white"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"

            android:id="@+id/mOtherMenu">

            <LinearLayout
                style="@style/llt_menu_item">

                <ImageView
                    android:id="@+id/btn_gallery"
                    style="@style/header_layout_icon_size"
                    android:src="@drawable/icon_gallery" />

            </LinearLayout>

            <LinearLayout
                style="@style/llt_menu_item">

                <ImageView
                    android:id="@+id/btn_camera_filter"
                    style="@style/header_layout_icon_size"
                    android:src="@drawable/icon_filter"/>
            </LinearLayout>

            <LinearLayout
                style="@style/llt_menu_item">

                <ImageView
                    android:id="@+id/btn_camera_shutter"
                    style="@style/caemra_shutter_icon_size"
                    android:src="@drawable/icon_camera" />

            </LinearLayout>

            <LinearLayout
                style="@style/llt_menu_item">

                <ImageView
                    android:id="@+id/btn_sticker"

                    style="@style/header_layout_icon_size"
                    android:src="@drawable/icon_sticker" />

            </LinearLayout>

            <LinearLayout
                style="@style/llt_menu_item">

                <ImageView
                    android:id="@+id/btn_camera_beauty"
                    style="@style/header_layout_icon_size"
                    android:src="@drawable/icon_beauti" />

            </LinearLayout>








