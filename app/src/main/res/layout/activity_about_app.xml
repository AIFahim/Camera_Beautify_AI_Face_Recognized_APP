<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#325F5F5E"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AboutApp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView

                app:cardBackgroundColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"

                android:layout_marginLeft="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/about_app_logo"
                    android:elevation="1dp"
                    android:layout_centerHorizontal="true">
                </de.hdodenhof.circleimageview.CircleImageView>




            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/transparent_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp"
                    app:contentPaddingBottom="15dp"
                    app:contentPaddingLeft="15dp"
                    app:contentPaddingRight="15dp"
                    app:contentPaddingTop="5dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="110dp">




                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </RelativeLayout>

        <TextView
            style="@style/llt_about_header"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="ORGANISED BY">

        </TextView>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView

                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"


                android:layout_marginLeft="10dp">

                <ImageView
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/about_digital_bangladesh"
                    android:elevation="1dp"
                    android:layout_centerHorizontal="true">
                </ImageView>




            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"


                android:layout_marginLeft="10dp">

                <ImageView
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/about_ict_logo"
                    android:elevation="1dp"
                    android:layout_centerHorizontal="true">
                </ImageView>




            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"


                android:layout_marginLeft="10dp">

                <ImageView
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/about_mobile_game_logo"
                    android:elevation="1dp"
                    android:layout_centerHorizontal="true">
                </ImageView>




            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <TextView
            style="@style/llt_about_header"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="CONDUCTED BY">

        </TextView>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView

                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"


                android:layout_marginLeft="10dp">

                <ImageView
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/about_leotech_logo"
                    android:elevation="1dp"
                    android:layout_centerHorizontal="true">
                </ImageView>




            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                app:cardBackgroundColor="@color/white"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"


                android:layout_marginLeft="10dp">

                <ImageView
                    android:padding="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/about_virtual_digital"
                    android:elevation="1dp"
                    android:layout_centerHorizontal="true">
                </ImageView>




            </androidx.cardview.widget.CardView>




        </LinearLayout>

        <TextView
            style="@style/llt_about_header"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="CREDITS">

        </TextView>


    </LinearLayout>


    <WebView
        android:background="#325F5F5E"
        android:id="@+id/webViewForHtml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </WebView>


    </LinearLayout>

    </ScrollView>



</RelativeLayout>






