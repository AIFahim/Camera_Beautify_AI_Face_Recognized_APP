<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GalleryTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="splash_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">#CECCCC</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="windowNoTitle">true</item>

    </style>

    <style name="header_layout_size">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="trangle_layout_size">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
    </style>


    <style name="header_layout_icon_size">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>


    <style name="gallery_layout_icon_size">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="trangle_layout_icon_size">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
    </style>

    <style name="caemra_shutter_icon_size">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="img_main_item">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>





    <style name="trangle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>

        <item name="android:orientation">vertical</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="llt_menu_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="txt_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_txt_white</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="llt_setting_header">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">30dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:background">#666</item>
</style>

    <style name="llt_about_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/transparent_white</item>
    </style>

    <style name="txt_setting_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="llt_setting_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="img_setting_content">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="llt_setting_content_spec">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="txt_setting_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="txt_setting_content_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="swi_setting_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:thumb">@drawable/back_swt_thumb</item>-->
<!--        <item name="android:track">@drawable/back_swt</item>-->
        <item name="android:layout_marginRight">10dp</item>
    </style>


